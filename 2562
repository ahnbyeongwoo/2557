import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int[] arr = new int[9];
        int max = 0;

        int v1 = 0;
        for (int i = 0; i < arr.length; i++) {
            int n = sc.nextInt();
            if (max < n) {
                max = n;
                v1=i+1;
            }
        }
        System.out.println(max);
        System.out.println(v1);

        sc.close();
    }
}
